---
seoimg: "/favicon.ico"
seodesc: "ngh"
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
	{% if passivestyle %}
		{{ passivestyle | safe }}
	{% endif %}
	<link rel='stylesheet' href='/resc/main.css' media='screen' type='text/css' />
	{% if title %}
		<title>tpeblog - {{ title }}</title>
	{% else %}
		<title>tpeblog!</title>
	{% endif %}
	<meta name="description" content="{{seodesc}}">

<!-- Google / Search Engine Tags -->

	{% if title %}
		<meta itemprop="name" content="tpeblog - {{ title }}">
	{% else %}
		<meta itemprop="name" content="tpeblog!">
	{% endif %}
<meta itemprop="description" content="{{seodesc}}">
<meta itemprop="image" content="https://blog.thepersonever.net/{{seoimg}}">

<!-- ughhhhhhhhhhhhhhhhhhFacebook Meta Tags -->
<meta property="og:url" content="https://blog.thepersonever.net/{{canonurl}}">
<meta property="og:type" content="website">
	{% if title %}
		<meta property="og:title" content="tpeblog - {{ title }}">
	{% else %}
		<meta property="og:title" content="tpeblog!">
	{% endif %}
<meta property="og:description" content="{{seodesc}}">
<meta property="og:image" content="https://blog.thepersonever.net/{{seoimg}}">

<!-- Twitter Meta Tags -->
<meta name="twitter:card" content="summary_large_image">

	{% if title %}
		<meta name="twitter:title" content="tpeblog - {{ title }}">
	{% else %}
		<meta name="twitter:title" content="tpeblog!">
	{% endif %}
<meta name="twitter:description" content="{{seodesc}}">
<meta name="twitter:image" content="https://blog.thepersonever.net/{{seoimg}}">
</head>

<div class="all">
	<div class=header>
    	<a href=/><img class="logo" src="/resc/img/logo.png"></a>
	</div>
	<div class=body>
        <div class="innerbody">
            <h2 class="title">{{ title }}
			{% if hidedate %}	
				</h2>
			{% elif time %}
				<br>{{ page.date | toTime }}</h2>
				</h2>
			{% else %}
				<br>{{ page.date | toDate }}</h2>
			{% endif %}
            <div class="colorinner">
        		{{ content | safe }}
            </div>
        </div>
        <div class="recents">
			<p><w>recent blog posts:</w></p>
			{% set legacyposts = collections.legacy | reverse %}
			{%- for legacy in legacyposts -%}
				{% if loop.index0 < 3 %}    
					<a href="{{ legacy.url }}"><w>{{ legacy.data.title }}</w></a><br>
				{% endif %}
			{%- endfor -%}
			<br>
			<br><a href="/blogs/legacy/"><w>legacy blogposts</w></a>
            <br><a href="https://thepersonever.net/"><w>back 2 tpe</w></a>
        </div>
	</div>
	<div class=body >
  	  <div class="copyright">
			<small style="float: left; width: justify; max-width: 100%;">thepersonever.net - <a style="font-size: unset" href="https://thepersonever.net/c-cgl-1-1.txt" target=_blank>(C+CGL)</a></small>
			<small style="float: right; width: justify; max-width: 100%;">made with 11ty &lt;3</small>
			<br>
		</div>
	</div>
</div>
  </body>
</html>
